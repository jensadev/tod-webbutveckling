{% if updates.items %}
    {% set latest = updates.items.slice(0,2) %}
    <header class="updates">
        <h2 class="updates__header">Senaste uppdateringar</h2>
        <ul class="updates__list">
            {% for item in latest %}
                <li class="updates__list-item">
                    <time datetime="{{ item.date | htmlDateString }}">{{ item.date | readableDate }}</time>
                     - {{ item.text }}
                </li>
            {% endfor %}
        </ul>
    </header>
{% endif %}