{% set currentPage %}{{ page.fileSlug }}{% endset %}
{% set navPages = collections.all | eleventyNavigation(eleventyNavigation.parent) %}
<nav class="nav-bottom" role="navigation">
    <ul class="nav-bottom__list">
        {%- set previousPost = navPages | prev(page.url) %}
        <li class="nav-bottom__list-item">
            {%- if previousPost %}
                <a class="nav-bottom__list-item-link" href="{{ previousPost.url | url }}">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        fill="currentColor"
                        class="bi bi-chevron-left"
                        viewBox="0 0 16 16">
                        <path
                            fill-rule="evenodd"
                            d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
                    </svg>
                    <span class="nav-bottom__list-text--left">{{ previousPost.title | capitalize }}</span>
                </a>
            {% endif %}
        </li>
        {%- set nextPost = navPages | next(page.url) %}
        <li class="nav-bottom__list-item">
            {%- if nextPost %}
                <a class="nav-bottom__list-item-link" href="{{ nextPost.url | url }}">
                    <span class="nav-bottom__list-text--right">{{ nextPost.title | capitalize }}</span>
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        fill="currentColor"
                        class="bi bi-chevron-right"
                        viewBox="0 0 16 16">
                        <path
                            fill-rule="evenodd"
                            d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1
                                0-.708z"/>
                    </svg>
                </a>
            {% endif %}
        </li>
    </ul>
</nav>